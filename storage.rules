rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatars are public read, but only server (Admin SDK) can write
    match /avatars/{fileName} {
      allow read: if true;
      allow write: if false; // Admin SDK bypasses rules
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
